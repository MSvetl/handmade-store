{
  "name": "handmade-store",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "powershell -Command \"$env:PORT = if ($env:PORT) { $env:PORT } else { '3001' }; next dev -p $env:PORT\"",
    "build": "next build",
    "start": "powershell -Command \"$env:PORT = if ($env:PORT) { $env:PORT } else { '3001' }; next start -p $env:PORT\"",
    "lint": "next lint",
    "clean": "powershell -File clean.ps1"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "20.11.0",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "autoprefixer": "^10.4.21",
    "kill-port": "^2.0.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
